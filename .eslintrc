---
extends: airbnb-base
env:
  node: true
parserOptions:
  sourceType: script
rules:
  strict:
    - error
    - safe
  quotes:
    - error
    - single
    - avoid-escape
  no-underscore-dangle:
    - off
  no-use-before-define:
    - error
    - functions: false
  arrow-parens:
    - error
    - always
