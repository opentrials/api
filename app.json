{
  "name": "opentrials-api",
  "description": "API for OpenTrials.net",
  "scripts": {
    "postdeploy": "npm run migrate && npm run seed && npm run reindex"
  },
  "env": {
    "URL": {
      "description": "Base URL for this app (e.g. http://api.opentrials.net)",
      "required": true
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "9.4"
      }
    },
    {
      "plan": "bonsai:sandbox-10",
      "options": {
        "version": "2.3"
      }
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}
